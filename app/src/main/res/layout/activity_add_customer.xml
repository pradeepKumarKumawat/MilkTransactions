<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50"
    android:padding="10dp"
    tools:context=".addCustomer">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#fff"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Add Customer"
                    android:textAlignment="center"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/numberrrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No."
                    android:inputType="number"
                    android:textStyle="bold">
                </EditText>
                <EditText
                    android:id="@+id/nameeee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="text"
                    android:textStyle="bold">
                </EditText>
                <EditText
                    android:id="@+id/addressss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="text"
                    android:textStyle="bold">
                </EditText>
                <EditText
                    android:id="@+id/mobilenumberrrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:textStyle="bold">
                </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                    android:id="@+id/dateeee"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:layout_marginLeft="5dp"
                    android:inputType="date"
                    android:textStyle="bold">
                </EditText>
                <EditText
                    android:id="@+id/liter"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:hint="Liter"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:textStyle="bold">
                </EditText>
            </LinearLayout>
                <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <EditText
                  android:id="@+id/priceeee"
                  android:layout_width="140dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:hint="Price"
                  android:inputType="phone"
                  android:textStyle="bold">
              </EditText>
              <EditText
                  android:id="@+id/literrrr"
                  android:layout_width="140dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:hint="Cow/Buff."
                  android:inputType="text"
                  android:textStyle="bold">
              </EditText>
          </LinearLayout>
                <Button
                    android:id="@+id/inputdataaaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#2c3e50"
            app:cardCornerRadius="45dp"
            android:elevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/boy">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>